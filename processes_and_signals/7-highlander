#!/usr/bin/env bash
# This script displays "To infinity and beyond" indefinitely with a sleep 2 in between each iteration.
# It also displays "I am invincible!!!" when receiving a SIGTERM signal.

# Function to handle SIGTERM signal
function sigterm_handler() {
    echo "I am invincible!!!"
    exit 0
}

# Trap SIGTERM signal and call the handler function
trap sigterm_handler SIGTERM

# Loop indefinitely
while true; do
    echo "To infinity and beyond"
    sleep 2
done
